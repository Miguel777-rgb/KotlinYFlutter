<?xml version="1.0" encoding="utf-8"?>
    <!--
        Descripción: Define el flujo de navegación de la aplicación. Conecta todos los fragments,
        especifica las acciones para moverse entre ellos y define los argumentos que se pasan.
        Autor: Miguel Flores
        Fecha Creación: 2025-09-30
        Fecha Última Modificación: 2025-09-30
    -->
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/inicioFragment">

    <fragment
        android:id="@+id/inicioFragment"
        android:name="com.example.practica5.InicioFragment"
        android:label="Inicio"
        tools:layout="@layout/fragment_inicio">
        <action
            android:id="@+id/action_inicioFragment_to_seleccionComidaFragment"
            app:destination="@id/seleccionComidaFragment" />
    </fragment>

    <fragment
        android:id="@+id/seleccionComidaFragment"
        android:name="com.example.practica5.SeleccionComidaFragment"
        android:label="Seleccionar Comida"
        tools:layout="@layout/fragment_seleccion_comida">
        <action
            android:id="@+id/action_seleccionComidaFragment_to_seleccionExtrasFragment"
            app:destination="@id/seleccionExtrasFragment" />
    </fragment>

    <fragment
        android:id="@+id/seleccionExtrasFragment"
        android:name="com.example.practica5.SeleccionExtrasFragment"
        android:label="Seleccionar Extras"
        tools:layout="@layout/fragment_seleccion_extras">
        <action
            android:id="@+id/action_seleccionExtrasFragment_to_resumenPedidoFragment"
            app:destination="@id/resumenPedidoFragment" />
        <argument
            android:name="comidaSeleccionada"
            app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/resumenPedidoFragment"
        android:name="com.example.practica5.ResumenPedidoFragment"
        android:label="Resumen del Pedido"
        tools:layout="@layout/fragment_resumen_pedido">
        <action
            android:id="@+id/action_resumenPedidoFragment_to_inicioFragment"
            app:destination="@id/inicioFragment"
            app:popUpTo="@id/inicioFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="comida"
            app:argType="string" />
        <argument
            android:name="extras"
            app:argType="string[]" />
    </fragment>
</navigation>
